{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "${workspaceFolder}/build"],
            "group": {"kind": "build", "isDefault": true}
        },
        {
            "label": "deploy-qt",
            "type": "shell",
            "command": "${env:QT6_DIR}/bin/windeployqt.exe",
            "args": ["${workspaceFolder}/build/engine.exe"],
            "problemMatcher": [],
            "runOptions": {"runOn": "folderOpen"},
            "windows": {}
        }
    ]
}
